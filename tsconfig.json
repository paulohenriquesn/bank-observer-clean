{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "node"
    ],
    "module": "commonjs",
    "resolveJsonModule": true,
    "allowJs": true,
    "importHelpers": true,
    "outDir": "./build",
    "rootDir": ".",
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "strict": true,
    "paths": {}
  }
}